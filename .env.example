# Copy this file to .env and fill the values. DO NOT commit secrets to git.

# MongoDB connection string (required)
# Example: mongodb+srv://user:password@cluster0.mongodb.net/Vasoli?retryWrites=true&w=majority
MONGO_URI=

# Google OAuth2 credentials (from Google Cloud Console)
CLIENT_ID=
CLIENT_SECRET=

# Redirect URI you registered for the OAuth2 client
# Example: http://localhost:3000/api/drive/oauth2callback
REDIRECT_URI=

# Optional: folder URL to list by default (Google Drive folder link)
DRIVE_FOLDER_URL=

# Optional: application port
PORT=3000
